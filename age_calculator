# age_calculator.py

def calculate_age():
    try:
        birth_year = int(input("Enter your birth year: "))
        current_year = 2024  
        age = current_year - birth_year
        
        print("Your age is: ", age)
    
    except ValueError:
        print("Please enter a valid year as a number.")

if __name__ == "__main__":
    calculate_age()

